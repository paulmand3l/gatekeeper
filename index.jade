doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1 user-scalable=no")
    meta(name="author" content="Paul Mandel")

    title Gatekeeper

    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
    link(rel="stylesheet" href="css/gatekeeper.css")

  body
    .u.r.b
    .u.l.b

    .container
      .row
        .col-md-12
          h1 Class Check In
          .form-group
            label(for="email") Name
            input#name.form-control.input-lg(type="text")
          .form-group
            label(for="email") Email Address
            input#email.form-control.input-lg(type="email")
          p
            button#early.btn.btn-primary.btn-lg(type="button") Level 2 (8pm &ndash; 9pm)
            button#late.btn.btn-primary.btn-lg(type="button") Level 1 (9pm &ndash; 10pm)

          .row
            .col-md-12
              button#submit.btn.btn-lg.btn-success(type="submit") Check in &raquo;

    script(src="http://code.jquery.com/jquery-1.11.0.min.js")
    script(src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    script(src="js/gatekeeper.js")

